  <style>
    /* Always set the map height explicitly to define the size of the div
    * element that contains the map. */
      #map {
        height: 600px;
      }
    </style>
  <div id="map"></div>
  <br>
  <br>
  <input type="submit" id="submit">
  <script>
    function myMap() {
    var mapCanvas = document.getElementById("map");
    var myCenter = new google.maps.LatLng(40.993912,39.776724);
    var mapOptions = {center: myCenter, zoom: 17};
    var map = new google.maps.Map(mapCanvas, mapOptions);
    var directionsService = new google.maps.DirectionsService;
    var directionsDisplay = new google.maps.DirectionsRenderer({
        suppressMarkers: true
    });

    <% @devices.each do |device| %>
      var newMarker = new google.maps.LatLng(<%=device.name%>);
      <% if device.datums.last != nil && device.datums.last.value.to_i > 10 %>
        <% icon = "redball.png" %>
        var marker = new google.maps.Marker({
          position:newMarker,
          icon: "<%=icon%>",
          map: map
        });
      <% else %>
        <% icon = "greenball.png" %>
        var marker = new google.maps.Marker({
          position:newMarker,
          icon: "<%=icon%>",
          map: map
        });
      <% end %>
    <% end %>



    directionsDisplay.setMap(map);

        document.getElementById('submit').addEventListener('click', function() {
          calculateAndDisplayRoute(directionsService, directionsDisplay);
        });
      }



    function calculateAndDisplayRoute(directionsService, directionsDisplay) {
        var waypts = [
        <% @devices.each do |device| %>
          <% if device.datums.last != nil && device.datums.last.value.to_i > 10 %>
            {
              location: new google.maps.LatLng(<%=device.name%>),
              stopover: true
            },
          <% end %>
        <% end %>
        ];

        directionsService.route({
          origin: new google.maps.LatLng(40.998074, 39.763702),
          destination: new google.maps.LatLng(40.998380, 39.761928),
          waypoints: waypts,
          optimizeWaypoints: true,
          travelMode: 'DRIVING'
        }, function(response, status) {
          if (status === 'OK') {
            directionsDisplay.setDirections(response);
            var route = response.routes[0];
          } else {
            window.alert('Directions request failed due to ' + status);
          }
        });

  }
  </script>
  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB-s4spIbfdJ2Yp82XoDv6x4OzgZUTWAb0&callback=myMap"
  async defer></script>
