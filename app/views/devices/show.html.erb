<div id="wrapper">
  <%= render "/devices/layouts/navbar" %>

  <!-- Page Content -->
  <div id="page-wrapper">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12">
          <h1 class="page-header">Device <%= @device.name %></h1>
        </div>
        <!-- /.col-lg-12 -->
      </div>
      <!-- /.row -->
      <div class="row">
        <div class="col-lg-6 col-md-6">
          <div class="panel panel-default">
              <div class="panel-heading">
                  Device info for <%= @device.name %>
              </div>
              <div class="panel-body">
                  <div class="row">
                      <div class="col-lg-12">
                        <b>Device Name:</b> <%= @device.name %>
                        <br>
                        <b>Device Address:</b> <%= @device.address %>
                        <br>
                        <% if @garbage_level %>
                          <b>Garbage Level:</b> <%= @garbage_level %>
                          <br>
                        <% end %>
                        <b>Device Company:</b> <%= @device.company.name %>
                        <br>
                        <b>Device Created At:</b> <%= @device.created_at %>
                      </div>
                      <!-- /.col-lg-6 (nested) -->
                  </div>
                  <!-- /.row (nested) -->
              </div>
              <!-- /.panel-body -->
          </div>
        </div>
          <div class="col-lg-6">
            <%= render '/devices/layouts/show_device_on_map' if current_user.use_case == 'garbage' %>
          </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </div>
  <!-- /#page-wrapper -->
</div>
